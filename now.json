{
  "version": 2,
  "name": "synth",
  "regions": ["hnd1", "lhr1", "sfo1", "pdx1", "syd1"],
  "builds": [
    { "src": "login.js", "use": "@now/node" },
    { "src": "rtmp.js", "use": "@now/node", "config": { "maxLambdaSize": "50mb" } },
    { "src": "static/**/*", "use": "@now/static" },
    { "src": "index.html", "use": "@now/static" }
  ],
  "routes": [
    { "src": "/login/(.*)", "dest": "/login.js?url=$1" },
    { "src": "/rtmp", "dest": "/rtmp.js" },
    { "src": "/static/(.*)", "dest": "static/$1"},
    { "src": "/", "dest": "index.html"}
  ],
  "env": {
    "ACC_BASE": "@synth-acc",
    "PASS_BASE": "@synth-pass",
    "TOKEN": "@synth-token"
  }
}
